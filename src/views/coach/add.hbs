<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/entrenadores/add" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="lastName" placeholder="Apellido">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="dni" placeholder="Cédula de Ciudadania">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Correo Electrónico">
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control" name="phoneNumber" placeholder="Número Celular">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="salary" placeholder="Salario">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar Entrenador
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>