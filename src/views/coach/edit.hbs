<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/entrenadores/edit/{{link.id}}" method="post">
                        <div class="form-group">
                            <input type="text" value="{{link.name}}" class="form-control" name="name"
                                placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.lastName}}" class="form-control" name="lastName"
                                placeholder="Apellido">
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{link.dni}}" class="form-control" name="dni"
                                placeholder="Cédula de Ciudadania">
                        </div>
                        <div class="form-group">
                            <input type="email" value="{{link.email}}" class="form-control" name="email"
                                placeholder="Correo Electrónico">
                        </div>
                        <div class="form-group">
                            <input type="tel" value="{{link.phoneNumber}}" class="form-control" name="phoneNumber"
                                placeholder="Número Celular">
                        </div>
                        <div class="form-group">
                            <input type="tel" value="{{link.salary}}" class="form-control" name="salary"
                                placeholder="Salario">
                        </div>
                        <div class="form-group">
                            <a class="btn btn-danger" href="/entrenadores" role="button">Cancelar</a>
                            <button class="btn btn-success">
                                Guardar Entrenador
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>